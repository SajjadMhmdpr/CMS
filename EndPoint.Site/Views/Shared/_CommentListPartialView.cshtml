@model IEnumerable<Domain.News.Comment>
@using EndPoint.Site.Extention


<ul>
    @{

        foreach (var i in Model)
        {
            <!-- start each comment -->
            <li>
                <img src="img/thumb.png">
                <div>
                    <span> @i.Name </span>
                    <span> @i.CreateDate.toShamsi() </span>
                </div>
                <p>@i.Text</p>
            </li>
            <!-- end each comment -->
        }



    }



</ul>
