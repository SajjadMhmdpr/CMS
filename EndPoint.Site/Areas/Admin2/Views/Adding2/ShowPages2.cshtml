
@{
    ViewData["Title"] = "ShowPages";
    Layout = "~/Areas/Admin2/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<EndPoint.Site.Areas.Admin.Models.PageModelView>

@section Csss{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="~/DatePiker/dist/kamadatepicker.min.css" rel="stylesheet" />


    <style>
        img {
            height: 50px;
            width: 50px;
        }
    </style>
}


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>عکس</th>
            <th>گروه</th>
            <th>عنوان</th>
            <th>توضیح کوتاه</th>
            <th>امکانات</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var i in Model)
            {
                <tr>
                    <td>
                        <img src=" @i.Image2" alt="Alternate Text" />
                    </td>
                    <td>@i.PageGroup</td>
                    <td>@i.PageTitle</td>
                    <td>@i.ShortDescription</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-info btn-flat" href="~/Page/GetPage?id=@i.id">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a class="btn btn-warning btn-flat" href="~/Admin/Adding/EditePage/@i.id">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-danger btn-flat" href="https://www.zoomg.ir/cinema-news/">
                                <i class="bi bi-trash"></i>
                            </a>
                            @*<button type="button" class="btn btn-danger btn-flat" data-toggle="modal" data-target="#modal-danger"><i class="fa fa-trash"></i></button>*@
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<input type="text" id="cleander"/>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>
















@section Scripts{
    <script src="~/DatePiker/dist/kamadatepicker.min.js"></script>
    <script>
        $(document).ready(function () {

            kamaDatepicker('cleander', {
                buttonsColor: "red",
                forceFarsiDigits: true,
                markToday: true,
                markHolidays: true,
                gotoToday: true,
                nextButtonIcon:"bi-caret-right-fill",
                previousButtonIcon:"bi-caret-left-fill"
            });

        })


    </script>


}








